<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %> - CSE Motors</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="container header-inner">
        <h1 class="brand">CSE Motors</h1>

        <button class="menu-toggle" aria-label="Toggle menu" aria-expanded="false">
          <span class="bars"></span>
        </button>

        <nav class="main-nav">
          <a href="/">Home</a>
          <a href="/custom">Custom</a>
          <a href="/sedans">Sedan</a>
          <a href="/sport">Sport</a>
          <a href="/suv">SUV</a>
          <a href="/truck">Truck</a>
        </nav>

        <div class="account">My Account</div>
      </div>

      <div class="mobile-nav" hidden>
        <div class="container">
          <a href="/">Home</a>
          <a href="/custom">Custom</a>
          <a href="/sedans">Sedan</a>
          <a href="/sport">Sport</a>
          <a href="/suv">SUV</a>
          <a href="/truck">Truck</a>
          <div class="mobile-account">My Account</div>
        </div>
      </div>
    </header>

    <main class="container">
      <div class="card car-detail">
  <h2><%= car.custom_name %> — <small><%= car.make %> <%= car.model %></small></h2>
        <div class="detail-grid">
          <div class="image">
            <img src="<%= car.image %>" alt="<%= car.custom_name %>" />
          </div>
          <div class="info">
            <p><strong>Price:</strong> <%= car.currency %> <%= car.price.toLocaleString() %></p>
            <p><strong>Year:</strong> <%= car.year %></p>
            <p><strong>Engine:</strong> <%= car.engine.type %> — <%= car.engine.horsepower %> <%= car.engine.power_unit %></p>
            <p><strong>Color:</strong> <%= car.color %></p>
            <p><strong>Category:</strong> <%= car.category %></p>
            <p><strong>Modifications:</strong></p>
            <ul>
              <% car.modifications.forEach(function(m){ %>
                <li><%= m %></li>
              <% }) %>
            </ul>
            <p><strong>Available:</strong> <%= car.available ? 'Yes' : 'No' %></p>
            <a class="btn primary" href="#">Contact Dealer</a>
          </div>
        </div>
      </div>
    </main>

    <footer class="site-footer">
      <div class="container">
        <small>&copy; <%= new Date().getFullYear() %> CSE Motors</small>
        <div><a href="/error/500">Trigger 500 Error (test)</a></div>
      </div>
    </footer>
    <script src="/js/menu.js"></script>
  </body>
</html>
