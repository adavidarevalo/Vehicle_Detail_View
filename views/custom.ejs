<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Browse vehicle galleries at CSE Motors, including Custom, Sedans, Sport, SUV, and Truck categories with prices and specs." />
    <title><%= title %> - CSE Motors</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header class="site-header">
      <div class="container header-inner">
        <h1 class="brand">CSE Motors</h1>

        <button class="menu-toggle" aria-label="Toggle menu" aria-expanded="false">
          <span class="bars"></span>
        </button>

        <nav class="main-nav">
          <a href="/">Home</a>
          <a href="/custom">Custom</a>
          <a href="/sedans">Sedan</a>
          <a href="/sport">Sport</a>
          <a href="/suv">SUV</a>
          <a href="/truck">Truck</a>
        </nav>

        <div class="account">My Account</div>
      </div>

      <div class="mobile-nav" hidden>
        <div class="container">
          <a href="/">Home</a>
          <a href="/custom">Custom</a>
          <a href="/sedans">Sedan</a>
          <a href="/sport">Sport</a>
          <a href="/suv">SUV</a>
          <a href="/truck">Truck</a>
          <div class="mobile-account">My Account</div>
        </div>
      </div>
    </header>

    <main class="container">
      <h2>Custom Gallery</h2>
      <section class="gallery">
        <% cars.forEach(function(car){ %>
          <article class="card car-card">
            <a href="/cars/<%= car.id %>">
              <img src="<%= car.image %>" alt="<%= car.custom_name %>" />
              <h4><%= car.custom_name %> â€” <small><%= car.make %> <%= car.model %></small></h4>
              <p class="price"><%= new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(car.price || 0) %></p>
            </a>
          </article>
        <% }) %>
      </section>
    </main>

    <footer class="site-footer">
      <div class="container">
        <small>&copy; <%= new Date().getFullYear() %> CSE Motors</small>
        <div><a href="/error/500">Trigger 500 Error</a></div>
      </div>
    </footer>
    <script src="/js/menu.js"></script>
  </body>
</html>
